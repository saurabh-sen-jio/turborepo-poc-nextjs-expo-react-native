{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "desktop#start": {
      "dependsOn": ["desktop#build"],
      "cache": false
    },
    "desktop#bundle": {
      "dependsOn": []
    },
    "packager#package": {
      "dependsOn": ["ui#build", "desktop#bundle"],
      "cache": false
    },
    "packager#package-dir": {
      "dependsOn": ["ui#build", "desktop#bundle"],
      "cache": false
    }
  }
}
